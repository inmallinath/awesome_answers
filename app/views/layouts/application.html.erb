<%# This will be used as a default layout %>
<!DOCTYPE html>
<html>
<head>
  <title>AwesomeAnswers</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- <link rel="stylesheet" href="font-awesome.css"> -->

  <!-- <%#= stylesheet_link_tag "font-awesome"%> -->
</head>
<body>

<!-- <a href="/hello">Hello</a> |
<a href="/about">About</a> | -->

<%#hello_path and about_path are called route helpers. They get generated from the content of `routes.rb` and they are methods that can be used in all view files and all controllers%>
<!-- <a href="<%#=greet_path({name: "Codecore"})%>">Greet Codecore</a> -->


<%# link_to is a helper method that is built-in with Rails, it's a view helper method, meaning it's accessible only in the views / view helpers. link_to takes a first argurment which is an anchor. More info here:
http://api.rubyonrails.org/classes/ActionView/Helpers/UrlHelper.html#method-i-link_to %>
<nav class="navbar navbar-inverse navbar-fixed-top"> <!-- navbar-inverse for a black top bar-->
  <div class="container" >
    <a class="navbar-left" href="#"><%= image_tag "logo"%></a>
    <a class="navbar-brand navbar-left" href="#">Awesome Answers</a>
    <a class="navbar-brand navbar-left" href="<%=hello_path%>">Hello</a>
    <a class="navbar-brand navbar-left" href="<%=about_path%>">About</a>
    <a class="navbar-brand navbar-left" href="<%=greet_path("Codecore")%>"> Greet Codecore </a>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Subscribe", subscribe_path%></li>
      <li><%= link_to "New Question", new_question_path %></li>
      <li><%= link_to "All Questions", questions_path %></li>
      <% if user_signed_in?%>
        <li>Hello <%= current_user.first_name %></li>
        <li><%= link_to "Log Out", sessions_path, method: :delete%></li>
      <%else%>
        <li><%= link_to "Sign In", new_session_path%></li>
        <li><%= link_to "Sign Up", new_user_path%></li>
        <!-- <li><%#= link_to "My Favorites", %></li> -->
      <%end%>
    </ul>
  </div>
</nav>


<%#= flash[:notice] || flash[:alert] %>
<%= notice || alert %>
  <div class="jumbotron text-center">
    <%= yield %>
   </div>
<footer class="container text-center">
  <a href="http://facebook.com"><i class="fa fa-facebook"></i></a>
  <a href="http://twitter.com"><i class="fa fa-twitter"></i></a>
  <a href="http://www.linkedin.com"><i class="fa fa-linkedin"></i></a>
  <a href="http://plus.google.com"><i class="fa fa-google"></i></a>
  <p>
    &copy; 2016, Created by Mallinath 2016
  </p>
  <span class="glyphicon glyphicon-cog"></span>
</footer>
</body>
</html>
